@model IEnumerable<AuthorListItemVM>
@{
    ViewData["Title"] = "Index";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Authors</h6>
    </div>
    <div class="card-body">
        <a class="btn btn-outline-success mb-3" asp-action="Create">Create</a>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>IsDeleted</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr class='@(item.IsDeleted?"bg-danger text-light":"")'>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.IsDeleted</td>
                                <td><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                    <td class="text-center" colspan="6">No Data</td>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




